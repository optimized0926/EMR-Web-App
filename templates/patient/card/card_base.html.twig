<section class="card mb-2">
    <div class="card-body p-1">
        <div class="card-title mb-0 d-flex p-1 justify-content-between">
            {% if forceAlwaysOpen == true %}
                <span class="font-weight-bolder text-primary">{{ title|text }}</span>
            {% else %}
                <button class="btn btn-link p-0 btn-block text-left font-weight-bolder" data-toggle="collapse" data-target="#{{ id|attr }}" aria-expanded="true" aria-controls="{{ id|attr }}">{{ title|text }}</button>
            {% endif %}
            {% if auth %}
                {% if btnLabel == "Add" %}
                    {% set btnIcon = "fa-plus" %}
                {% else %}
                    {% set btnIcon = "fa-pencil-alt" %}
                {% endif %}
                {# Display the Edit button #}
                <a class="{{ btnClass|attr }}" href="{{ linkMethod == "html" ? btnLink : "#" }}" {{ (linkMethod == "html" and requireRestore == true) ? "onclick=\"top.restoreSession()\"" : ""}} {{ linkMethod == "javascript" ? "onclick=\"" ~ btnLink ~ "\"" : ''}}><i class="fa {{ btnIcon }} fa-sm">&nbsp;</i></a>
            {% endif %}
        </div>
        <div id="{{ id|attr }}" class="collapse {{ initiallyCollapsed == 1 ? "show" : ""}}">
            <div class="clearfix pt-2">
                {% block content %}{% endblock %}
            </div>
        </div>
    </div>
</section>
